@model RestaurantManagement.Areas.Admin.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Quản Trị";
}

<div class="dashboard content-wrapper active" id="dashboard">


    @* --- SỬ DỤNG DỮ LIỆU ĐỘNG TỪ MODEL --- *@
    <div class="stats-grid">

        @* Mục 1: Số lượng tài khoản *@
        <div class="stat-item">
            <div class="stat-icon">👥</div>
            <div class="stat-details">
                <h3>Số lượng tài khoản</h3>
                <p>@Model.TotalAccounts</p>
            </div>
        </div>

        @* Mục 2: Số lượng contact *@
        <div class="stat-item">
            <div class="stat-icon">📞</div>
            <div class="stat-details">
                <h3>Số lượng contact</h3>
                <p>@Model.TotalContacts</p>
            </div>
        </div>

        @* Mục MỚI: Số lượng khách hàng *@
        <div class="stat-item">
            <div class="stat-icon">👤</div>
            <div class="stat-details">
                <h3>Số lượng khách hàng</h3>
                <p>@Model.TotalCustomers</p>
            </div>
        </div>

        @* Mục 3: Số lượng món ăn *@
        <div class="stat-item">
            <div class="stat-icon">🍴</div>
            <div class="stat-details">
                <h3>Số lượng món ăn</h3>
                <p>@Model.TotalMenuItems</p>
            </div>
        </div>

        @* Mục 4: Số lượng hoá đơn *@
        <div class="stat-item">
            <div class="stat-icon">🧾</div>
            <div class="stat-details">
                <h3>Số lượng hoá đơn</h3>
                <p>@Model.TotalInvoices</p>
            </div>
        </div>
    </div>
</div>