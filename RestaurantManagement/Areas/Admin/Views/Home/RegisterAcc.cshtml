@model RestaurantManagement.Areas.Admin.Models.DangKiNV
@{
    ViewData["Title"] = "Đăng ký nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/RegisterAccLayout.cshtml";
}

<div class="login-card">
    <div class="card-decoration">
        <div class="deco-line line-1"></div>
        <div class="deco-line line-2"></div>
        <div class="deco-line line-3"></div>
    </div>

    <div class="login-header">
        <div class="creative-logo">
            <img src="~/admin/images/cutlery.png" alt="Logo">
        </div>
        <h2>Welcome to Restaurant Management System</h2>
        <p>Please register your account</p>
    </div>

<form class="login-form" id="registerForm" novalidate>
    <!-- Họ và Tên -->
    <div class="form-group">
        <div class="input-wrapper">
            <div class="input-decoration"></div>
            <input type="text" id="fullName" name="fullName" required>
            <label for="fullName">Họ và Tên</label>
            <div class="input-waves">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>
        </div>
        <span class="error-message" id="fullNameError"></span>
    </div>

    <!-- Email -->
    <div class="form-group">
        <div class="input-wrapper">
            <div class="input-decoration"></div>
            <input type="email" id="email" name="email" required autocomplete="email">
            <label for="email">Email Đăng nhập</label>
            <div class="input-waves">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>
        </div>
        <span class="error-message" id="emailError"></span>
    </div>

    <!-- Mật khẩu -->
    <div class="form-group">
        <div class="input-wrapper password-wrapper">
            <div class="input-decoration"></div>
            <input type="password" id="password" name="password" required autocomplete="new-password">
            <label for="password">Mật khẩu</label>
            <button type="button" class="password-toggle" id="passwordToggle" aria-label="Hiện/Ẩn mật khẩu">
                <span class="toggle-icon"></span>
            </button>
            <div class="input-waves">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>
        </div>
        <span class="error-message" id="passwordError"></span>
    </div>

    <!-- Xác nhận mật khẩu -->
    <div class="form-group">
        <div class="input-wrapper password-wrapper">
            <div class="input-decoration"></div>
            <input type="password" id="confirmPassword" name="confirmPassword" required autocomplete="new-password">
            <label for="confirmPassword">Xác nhận mật khẩu</label>
            <button type="button" class="password-toggle" id="confirmPasswordToggle" aria-label="Hiện/Ẩn mật khẩu">
                <span class="toggle-icon"></span>
            </button>
            <div class="input-waves">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>
        </div>
        <span class="error-message" id="confirmPasswordError"></span>
    </div>

    <!-- Số điện thoại -->
    <div class="form-group">
        <div class="input-wrapper">
            <div class="input-decoration"></div>
            <input type="tel" id="phoneNumber" name="phoneNumber" required pattern="^(0|\+84)(3|5|7|8|9)[0-9]{8}$">
            <label for="phoneNumber">Số điện thoại</label>
            <div class="input-waves">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>
        </div>
        <span class="error-message" id="phoneError"></span>
    </div>

    <!-- Ngày sinh -->
    <div class="form-group">
        <div class="input-wrapper">
            <div class="input-decoration"></div>
            <input type="date" id="dateOfBirth" name="dateOfBirth" required>
            <label for="dateOfBirth" class="active">Ngày sinh</label>
            <div class="input-waves">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>
        </div>
        <span class="error-message" id="dateError"></span>
    </div>

    <!-- Giới tính -->
        <div class="gender-group">
            <label>Giới tính</label>
            <div class="gender-options">
                <input type="radio" id="male" name="gender" value="Nam">
                <label for="male" class="gender-btn">Nam</label>

                <input type="radio" id="female" name="gender" value="Nữ">
                <label for="female" class="gender-btn">Nữ</label>

                <input type="radio" id="other" name="gender" value="Khác">
                <label for="other" class="gender-btn">Khác</label>
            </div>
        </div>


    <!-- Số CCCD/CMND -->
    <div class="form-group">
        <div class="input-wrapper">
            <div class="input-decoration"></div>
            <input type="text" id="nationalId" name="nationalId" required pattern="^\d{9,12}$">
            <label for="nationalId">Số CCCD/CMND</label>
            <div class="input-waves">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>
        </div>
        <span class="error-message" id="nationalIdError"></span>
    </div>

    <!-- Địa chỉ -->
    <div class="form-group">
        <div class="input-wrapper">
            <div class="input-decoration"></div>
            <input type="text" id="address" name="address">
            <label for="address">Địa chỉ (Tùy chọn)</label>
            <div class="input-waves">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>
        </div>
        <span class="error-message" id="addressError"></span>
    </div>

    <!-- Nút đăng ký -->
    <button type="submit" class="login-btn">
        <span class="btn-bg"></span>
        <span class="btn-text">Đăng ký</span>
        <span class="btn-loader">
            <div class="loader-dot dot-1"></div>
            <div class="loader-dot dot-2"></div>
            <div class="loader-dot dot-3"></div>
        </span>
    </button>
</form>

    <div class="success-message" id="successMessage">
        <div class="success-animation">
            <div class="success-circle"></div>
            <div class="success-checkmark">✓</div>
        </div>
        <h3>Welcome, Creator!</h3>
        <p>Entering our system...</p>
    </div>
</div>

