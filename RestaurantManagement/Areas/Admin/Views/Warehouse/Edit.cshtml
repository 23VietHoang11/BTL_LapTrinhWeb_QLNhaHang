<div class="content-wrapper" id="nguyenLieuAddEdit">
    <h2>Thêm/Sửa nguyên liệu</h2>
    <div class="menu-details">
        <input type="hidden" id="nguyenlieu-id" value="">

        <div class="form-group">
            <label for="nguyenlieu-name">Tên nguyên liệu (*)</label>
            <input type="text" id="nguyenlieu-name" placeholder="Thịt bò">
        </div>
        <div class="form-group">
            <label for="nguyenlieu-unit">Đơn vị tính (*)</label>
            <input type="text" id="nguyenlieu-unit" placeholder="Kg / Lít / Cái">
        </div>
        <div class="form-group">
            <label for="nguyenlieu-type">Loại nguyên liệu (*)</label>
            <input type="text" id="nguyenlieu-type" placeholder="Thịt / Rau / Gia vị">
        </div>

        <div class="form-group">
            <label for="nguyenlieu-quantity">Số lượng</label>
            <input type="number" id="nguyenlieu-quantity" placeholder="0" value="0">
        </div>
        <div class="form-group">
            <label for="nguyenlieu-date">Ngày nhập</label>
            <input type="date" id="nguyenlieu-date">
        </div>
        <div class="form-group">
            <label for="nguyenlieu-image">URL Hình ảnh</label>
            <input type="text" id="nguyenlieu-image" placeholder="https://.../hinh.png">
        </div>
        <button id="btn-save-nguyenlieu" class="btn-primary">Lưu (Thêm mới)</button>
        <button id="btn-update-nguyenlieu" class="btn-warning">Cập nhật (Sửa)</button>
        <button id="btn-delete-nguyenlieu" class="btn-danger">Xóa Nguyên liệu</button>
    </div>
</div>