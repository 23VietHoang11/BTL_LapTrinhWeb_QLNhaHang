@model RestaurantManagement.Models.Entities.HoaDon
@{
    ViewData["Title"] = "Xác nhận Xóa Hóa đơn";
}

<h2>Xác nhận Xóa Hóa đơn @Model.IdhoaDon</h2>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa Hóa đơn này không?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID Hóa đơn</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdhoaDon)</dd>

        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@(Model.IdkhachHangNavigation?.HoTenKh ?? "Khách vãng lai")</dd>

        <dt class="col-sm-3">Ngày Lập</dt>
        <dd class="col-sm-9">@Model.NgayLap.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Tổng Tiền</dt>
        <dd class="col-sm-9">@Model.TongTien?.ToString("N0") đ</dd>

        <dt class="col-sm-3">Trạng Thái</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TrangThai)</dd>
    </dl>

    <form asp-action="Delete" style="margin-top: 20px;">
        <input type="hidden" asp-for="IdhoaDon" />
        <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>