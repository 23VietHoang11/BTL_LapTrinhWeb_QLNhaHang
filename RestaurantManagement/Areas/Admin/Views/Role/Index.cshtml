@model IEnumerable<RestaurantManagement.Models.Entities.Quyen> // <-- Thêm Model phù hợp
@{
    ViewData["Title"] = "Danh sách quyền";
    //Layout = "AdminLayout";
}

<div class="content-wrapper" id="roleList">
    <h2>Danh sách vai trò</h2>
    <div class="toolbar">
        <input type="text" placeholder="Tìm kiếm vai trò ở đây!" class="search-input">
    </div>
    <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>TÊN</th>
                    <th>MÔ TẢ</th>
                    <th>NGÀY TẠO</th>
                    <th>NGÀY CẬP NHẬT</th>
                    <th>THAO TÁC</th>
                </tr>
            </thead>
            <tbody>
                @* Dùng vòng lặp @foreach (var role in Model) để render dữ liệu động *@
                @* Dưới đây là dữ liệu tĩnh từ file của bạn, hãy thay bằng vòng lặp *@
                <tr>
                    <td>1</td>
                    <td>Nhân viên 3</td>
                    <td></td>
                    <td>28/11/2024 12:43</td>
                    <td>03/12/2024 09:30</td>
                    <td class="actions">
                        <button class="btn-edit">Sửa</button>
                        <button class="btn-delete">Xóa</button>
                    </td>
                </tr>
                 </tbody>
        </table>
    </div>
    <div class="pagination">
        <span>Số lượng mục</span>
        <select>
            <option>5</option>
            <option>10</option>
            <option>20</option>
        </select>
        <div class="pages">
            <button>&lt;</button>
            <button class="active">1</button>
            <button>2</button>
            <button>&gt;</button>
        </div>
    </div>
</div>