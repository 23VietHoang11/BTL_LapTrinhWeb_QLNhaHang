@model RestaurantManagement.Models.ViewModels.MonAnCreateViewModel
@{
    ViewData["Title"] = "Thêm mặt hàng mới";
    // Layout = ... (layout admin của bạn)
}

<form asp-controller="AdminMonAn" asp-action="Create" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-4">
            <h4>Chọn ảnh mặt hàng</h4>

            <input asp-for="ImageFile" type="file" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="TenMon" class="form-label">Tên mặt hàng (*)</label>
                <input asp-for="TenMon" class="form-control" />
                <span asp-validation-for="TenMon" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Loai" class="form-label">Loại mặt hàng (*)</label>
                <input asp-for="Loai" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DonViTinh" class="form-label">Đơn vị tính (*)</label>
                <input asp-for="DonViTinh" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                <textarea asp-for="GhiChu" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="GiaBan" class="form-label">Giá bán (*)</label>
                <input asp-for="GiaBan" type="number" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GiaVon" class="form-label">Giá vốn (*)</label>
                <input asp-for="GiaVon" type="number" class="form-control" />
            </div>

            <hr />

            <div class="text-end">
                <button type="submit" class="btn btn-primary">Lưu lại</button>
            </div>
        </div>
    </div>
</form>