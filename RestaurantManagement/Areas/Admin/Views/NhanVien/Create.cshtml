@model RestaurantManagement.Areas.Admin.Models.ViewModels.NhanVienCreateViewModel
@{
    ViewData["Title"] = "Thêm nhân viên mới";
}

<div class="content-wrapper">
    <h2>Thêm nhân viên mới</h2>
    <div class="menu-details">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-4">
                    <h4>Thông tin đăng nhập</h4>
                    <div class="form-group">
                        <label asp-for="TenDangNhap">Tên đăng nhập (*)</label>
                        <input asp-for="TenDangNhap" class="form-control" />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MatKhau">Mật khẩu (*)</label>
                        <input asp-for="MatKhau" type="password" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <h4>Thông tin cá nhân</h4>
                    <div class="form-group"><label asp-for="HoTenNv">Họ và tên (*)</label><input asp-for="HoTenNv" class="form-control" /><span asp-validation-for="HoTenNv" class="text-danger"></span></div>
                    <div class="row">
                        <div class="col-md-6"><div class="form-group"><label asp-for="Email">Email (*)</label><input asp-for="Email" type="email" class="form-control" /><span asp-validation-for="Email" class="text-danger"></span></div></div>
                        <div class="col-md-6"><div class="form-group"><label asp-for="Sdt">SĐT (*)</label><input asp-for="Sdt" class="form-control" /><span asp-validation-for="Sdt" class="text-danger"></span></div></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ChucVu">Chức vụ (*)</label>
                        <select asp-for="ChucVu" class="form-control">
                            <option value="Quản Lý">Quản Lý</option>
                            <option value="Thu ngân">Thu ngân</option>
                            <option value="Phục vụ">Phục vụ</option>
                            <option value="Bếp">Bếp</option>
                        </select>
                    </div>
                    <div class="form-group"><label asp-for="NgaySinh">Ngày sinh (*)</label><input asp-for="NgaySinh" type="date" class="form-control" /><span asp-validation-for="NgaySinh" class="text-danger"></span></div>
                    <div class="form-group"><label asp-for="Cccd">CCCD (*)</label><input asp-for="Cccd" class="form-control" /><span asp-validation-for="Cccd" class="text-danger"></span></div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">Lưu nhân viên</button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}