@model RestaurantManagement.Areas.Admin.Models.ViewModels.NguyenLieuCreateViewModel
@{
    ViewData["Title"] = "Thêm nguyên liệu";
}

<div class="content-wrapper">
    <h2>Thêm nguyên liệu mới</h2>
    <div class="menu-details">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Ảnh minh họa</label>
                <div class="mb-2">
                    <img id="preview-image" src="https://via.placeholder.com/150"
                         style="max-width: 150px; max-height: 150px; object-fit: cover; border-radius: 8px;" />
                </div>
                <input asp-for="HinhAnh" type="file" class="form-control" accept="image/*"
                       onchange="document.getElementById('preview-image').src = window.URL.createObjectURL(this.files[0])" />
            </div>

            <div class="form-group">
                <label asp-for="TenNl">Tên nguyên liệu (*)</label>
                <input asp-for="TenNl" class="form-control" placeholder="Ví dụ: Thịt bò" />
                <span asp-validation-for="TenNl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonVi">Đơn vị tính (*)</label>
                <input asp-for="DonVi" class="form-control" placeholder="Kg / Lít..." />
                <span asp-validation-for="DonVi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loai">Loại nguyên liệu (*)</label>
                <input asp-for="Loai" class="form-control" placeholder="Thịt / Rau..." />
                <span asp-validation-for="Loai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong">Số lượng nhập</label>
                <input asp-for="SoLuong" type="number" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NgayNhap">Ngày nhập</label>
                <input asp-for="NgayNhap" type="date" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary mt-3">Lưu (Thêm mới)</button>
            <a asp-action="Index" class="btn btn-secondary mt-3 ml-2">Quay lại</a>
        </form>
    </div>
</div>