@model RestaurantManagement.Areas.Admin.Models.ViewModels.NguyenLieuEditViewModel
@{
    ViewData["Title"] = "Cập nhật nguyên liệu";
}

<div class="content-wrapper">
    <h2>Cập nhật nguyên liệu</h2>
    <div class="menu-details">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="IdnguyenLieu" />
            <input type="hidden" asp-for="ExistingImage" />

            <div class="form-group">
                <label>Ảnh hiện tại</label>
                <div class="mb-2">
                    <img id="preview-image" src="@(Model.ExistingImage ?? "https://via.placeholder.com/150")"
                         style="max-width: 150px; max-height: 150px; object-fit: cover; border-radius: 8px;" />
                </div>
                <label>Thay đổi ảnh:</label>
                <input asp-for="HinhAnh" type="file" class="form-control" accept="image/*"
                       onchange="document.getElementById('preview-image').src = window.URL.createObjectURL(this.files[0])" />
            </div>

            <div class="form-group">
                <label asp-for="TenNl">Tên nguyên liệu (*)</label>
                <input asp-for="TenNl" class="form-control" />
                <span asp-validation-for="TenNl" class="text-danger"></span>
            </div>
            <div class="form-group"><label asp-for="DonVi">Đơn vị tính (*)</label><input asp-for="DonVi" class="form-control" /></div>
            <div class="form-group"><label asp-for="Loai">Loại nguyên liệu (*)</label><input asp-for="Loai" class="form-control" /></div>
            <div class="form-group"><label asp-for="SoLuong">Số lượng</label><input asp-for="SoLuong" type="number" class="form-control" /></div>
            <div class="form-group"><label asp-for="NgayNhap">Ngày nhập</label><input asp-for="NgayNhap" type="date" class="form-control" /></div>

            <button type="submit" class="btn btn-warning mt-3">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary mt-3 ml-2">Quay lại</a>
        </form>
    </div>
</div>